include "std"

proc suffix
  1 eq lnot if
    "s" puts
  end
end

proc main
  99 while dup 0 gt do
    dup putu " bottle" puts dup suffix " of the beer on the wall,\n" puts
    dup putu " bottle" puts dup suffix " of the beer.\n" puts
    "Take one down, pass it around,\n" puts
    1 sub
    dup 0 gt if
      dup putu " bottle" puts dup suffix " of the beer on the wall.\n\n" puts
    else
      "No bottles of beer on the wall.\n\n" puts
    end
  end drop
end